<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="12dp"
    card_view:cardBackgroundColor="@color/quote_bg_color"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <!--Need to replace with Relative Layout-->
    <RelativeLayout
        android:id="@+id/quote_card_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/quote_pic"
            android:src="@drawable/bigquote"
            android:layout_marginStart="4dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/quote_card_text"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"
            android:paddingStart="4dp"
            android:paddingEnd="6dp"
            android:maxLength="40"
            android:maxLines="4"
            android:textColor="@color/pureWhite"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/quote_card_category"
            android:text=""
            android:layout_alignStart="@+id/quote_card_text"
            android:textColor="@color/pureWhite"
            android:paddingStart="4dp"
            android:layout_marginEnd="5dp"
            android:maxLines="1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textStyle="italic"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>